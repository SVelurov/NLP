# Заменим сокращения на их полные формы
df['tweet_no_short'] = df['tweet_no_apostr'].apply(lambda x: manipulate_text(short_word_dict, x))

# # Заменим эмотиконы
with open(path + '/' + 'Emoticon_Dict.p', 'rb') as fp:
    Emoticon_Dict = pickle.load(fp)

def remove_emoticons(text):
    emoticon_pattern = re.compile(u'(' + u'|'.join(k for k in Emoticon_Dict) + u')')
    return emoticon_pattern.sub(r'', text)

df['tweet_no_emot'] = df['tweet_no_short'].apply(lambda x: remove_emoticons(x))

# Заменим пунктуацию на пробелы
def remove_punctuation(text):
    return re.sub(r'[^\w\s]', '', text)

df['tweet_no_punct'] = df['tweet_no_emot'].apply(lambda x: remove_punctuation(x))

# Заменим спец. символы на пробелы
def remove_symbols(text):
    return re.sub(r'[^a-zA-Z0-9 ]', '', text)

df['tweet_no_symb'] = df['tweet_no_punct'].apply(lambda x: remove_symbols(x))

# Заменим числа на пробелы
def remove_numbers(text):
    return re.sub(r'[^a-zA-Z ]', '', text)

df['tweet_no_numb'] = df['tweet_no_symb'].apply(lambda x: remove_numbers(x))

# Удалим из текста слова длиной в 1 символ
def remove_words(text):
    return ' '.join([w for w in text.split() if len(w)>1])

df['tweet_no_words'] = df['tweet_no_numb'].apply(lambda x: remove_words(x))

# Токенизируем данные 
df['tweet_token'] = df['tweet_no_words'].apply(lambda x: tknz.word_tokenize(x))

# Уберем стоп-слова
stop_words = set(stopwords.words("russian"))

def remove_stopwords(lemmas, stopwords = stop_words):
    return [w for w in lemmas if not w in stopwords]

df['tweet_token_filtered'] = df['tweet_token'].apply(lambda x: remove_stopwords(x))

# Применим Стиммер
def add_stemmer(text):
    return [stemmer.stem(word) for word in text]

stemmer = PorterStemmer()

df['tweet_stemmed'] = df['tweet_token_filtered'].apply(lambda x: add_stemmer(x))

# Применим Лемматизацию
def add_lemmatizer(text, pos = wordnet.VERB):
    return [lemmatizer.lemmatize(word, pos) for word in text]

lemmatizer = WordNetLemmatizer()

df['tweet_lemmatized'] = df['tweet_token_filtered'].apply(lambda x: add_lemmatizer(x))
df = df.drop(['tweet_no_use', 'tweet_no_apostr', 'tweet_no_apostr', 'tweet_no_short', \
              'tweet_no_emot', 'tweet_no_punct', 'tweet_no_symb', 'tweet_no_numb', \
              'tweet_no_words', 'tweet_token'],	axis=1)
              
with open(path + '/' + 'twitter.pkl', 'wb') as f:
	pickle.dump(df, f)
  
df.head(10)
