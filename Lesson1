import re
import pandas as pd
import pickle
import nltk
nltk.download('punkt')
nltk.download('stopwords')
nltk.download('wordnet')
from nltk import tokenize as tknz
from nltk.tokenize import word_tokenize
from nltk.corpus import stopwords
from nltk.stem import PorterStemmer
from nltk.stem import WordNetLemmatizer
from nltk.corpus import wordnet

path = 'https://drive.google.com/drive/folders/1PUa_pTIGBoskDgg-xMLRLroqT_7tR605?usp=sharing'

df1 = pd.read_csv(path + '/' + 'train_tweets.csv', encoding = "UTF-8")
df1.set_index('id', inplace = True)
df2 = pd.read_csv(path + '/' + 'test_tweets.csv', encoding = "UTF-8")
df2['label'] = 0
df2 = df2[['id','label','tweet']]
df2.set_index('id', inplace = True)
df = pd.concat([df1,df2])

# удалим все @user и переведем в нижний регистр
def remove_patterns(pattern, data):
    pattern_words = re.findall(pattern, data) 
    for word in pattern_words:
            data = re.sub(word, '', data)
    return data

df['tweet_no_use'] = df['tweet'].apply(lambda x: remove_patterns(r'@[\w]*', x))
df['tweet_no_use'] = df['tweet_no_use'].apply(lambda x: x.lower())

