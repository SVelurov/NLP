# Замена слов
def manipulate_text(dictionary, text):
    for word in text.split(' '):
        if word in dictionary:
            text = text.replace(word, dictionary[word])
    return text
    
# Заменим сокращения с апострофами
df['tweet_no_apostr'] = df['tweet_no_use'].apply(lambda x: manipulate_text(apostrophe_dict, x))

